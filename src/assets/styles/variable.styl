/**
 * 变量定义
 */
// 主色调
$color-primary = #2AB4FC
// 高亮色调
$color-highlight = #fb4802
// 背景色
$color-background = #f8f9fc

// 用于副标题，文章正文
$color-text-primary = #667180
// 用于辅助、提示、次要消息
$color-text-minor = #98a4b3
// 用于分割线，空状态，进度条，评价星星
$color-text-disabled = #e6ecf2
// 用于背景置灰
$color-disabled = #b8c7d8
// 次要按钮
$color-btn-minor = #667180
